<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Page1">
    <ContentPage.Content>
        <StackLayout x:Name="stackLayout" Spacing="0" Orientation="Vertical">
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnScreenTapped"/>
            </StackLayout.GestureRecognizers>
            <!-- Первая строка с горизонтальным StackLayout -->
            <StackLayout Orientation="Horizontal" Spacing="0">
                <BoxView Color="Yellow" WidthRequest="150" HeightRequest="150"/>
                <BoxView Color="Red" WidthRequest="150" HeightRequest="150"/>
                <BoxView Color="Green" WidthRequest="210" HeightRequest="150"/>
            </StackLayout>

            <!-- Вторая строка с черным BoxView -->
            <BoxView Color="Black" HeightRequest="150"/>

            <!-- Третья строка с горизонтальным StackLayout -->
            <StackLayout Orientation="Horizontal" Spacing="0">
                <BoxView Color="Blue" WidthRequest="220" HeightRequest="200" />
                <BoxView Color="DeepSkyBlue" WidthRequest="230" HeightRequest="130"/>
            </StackLayout>

            <!-- Четвертая строка с красным BoxView -->
            <BoxView Color="Red" HeightRequest="200"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>